<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToiDoctor" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary_1</item>
        <item name="colorOnPrimary">#F4F7F5</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

<!--    Button-->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/custom_searchview_background</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>

    </style>


    <!--    TextView-->
    <style name="TextView.Primary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>
    <style name="TextView.Secondary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_2</item>
    </style>
    <style name="TextView.Secondary.Link" parent="TextView.Secondary">
        <item name="android:textColor">@color/primary_1</item>
    </style>

<!--    EditText-->
    <style name="EditText">
        <item name="boxBackgroundColor">@color/gray_3</item>
        <item name="android:textColorHint">@color/gray_2</item>
    </style>

    <!-- text styles -->

    <style name="headtext">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#1C1F1E</item>
        <item name="lineHeight">38sp</item>
    </style>

    <style name="doctor">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="major">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#E0EAF9</item>
    </style>

</resources>