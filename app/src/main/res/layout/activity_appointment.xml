<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="270dp"
        android:background="@color/chip_selected_color" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="goBack"
        android:text="@string/back"
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        tools:ignore="UsingOnClickInXml" />

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="55dp"
        android:text="ToiDoctor"
        android:textSize="20sp" />

    <TextView
        android:text="Thành công"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        />

    <ImageView
        android:src="@drawable/tick"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="140dp"
        />

    <TextView
        android:text="Bạn đã đặt lịch khám thành công, vui lòng chuẩn bị đầy đủ giấy tờ và chờ lịch khám"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="210dp"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/avt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/avt"
        android:contentDescription="@string/todo_avt" />

    <TextView
        android:id="@+id/sc_name"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="300dp"
        android:text="@string/dr_do_duy_chien"
        android:textSize = "16sp"
        />

    <TextView
        android:id="@+id/sc_major"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="320dp"
        android:text="@string/khoa_nhi"
        android:textSize = "14sp"

        />

    <TextView
        android:id="@+id/sc_review"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="300dp"

        android:textSize = "14sp"

        />

    <TextView
        android:id="@+id/sc_rate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="15dp"

        android:textSize="14sp" />

    <TextView
        android:text="Địa chỉ:"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="500dp"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <ImageView
        android:src = "@drawable/location"
        android:layout_width = "24dp"
        android:layout_height = "24dp"
        android:layout_marginStart = "30dp"
        android:layout_marginTop = "550dp"
        android:contentDescription="@string/location_image" />

    <TextView
        android:text="@string/location_r"
        android:layout_width = "147dp"
        android:layout_height = "34dp"
        android:layout_marginStart = "60dp"
        android:layout_marginTop = "550dp" />

    <ImageView
        android:src = "@drawable/hospital"
        android:layout_width = "24dp"
        android:layout_height = "24dp"
        android:layout_marginStart = "250dp"
        android:layout_marginTop = "550dp"
        android:contentDescription="@string/hospital_image" />

    <TextView
        android:text="@string/hospital"
        android:layout_width = "147dp"
        android:layout_height = "34dp"
        android:layout_marginStart = "280dp"
        android:layout_marginTop = "550dp" />

    <Button
        android:id="@+id/tro_ve_trang_chu"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:text="Trở về trang chủ"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvDisplayDateTime"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="400dp"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="460dp"
        android:text="(Hệ thống tự chuyển đổi thời gian bạn chọn đến mốc thời gian phù hợp gần nhất)"
        android:textSize="12sp" />


</RelativeLayout>
