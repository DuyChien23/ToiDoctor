<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TextView.Secondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F5"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="&lt; Back"
                android:textColor="#000000"
                app:backgroundTint="#00FFFFFF" />

            <Space
                android:layout_width="224dp"
                android:layout_height="21dp"></Space>

            <ImageButton
                android:id="@+id/notiButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/ic_noti" />
        </LinearLayout>

        <TextView
            android:id="@+id/PatienTitle"
            style="@style/TextView.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:text="Hồ sơ bệnh nhân"
            android:textSize="28sp"

            android:textStyle="normal" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/profile_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        style="@style/TextView.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Trần Bá Toản"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="116dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/sendMessage"
                            style="@style/Button.Primary"
                            android:layout_width="40dp"
                            android:layout_height="52dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:icon="@drawable/ic_chat"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp" />

                        <Button
                            android:id="@+id/phoneCall"
                            style="@style/Button.Primary"
                            android:layout_width="40dp"
                            android:layout_height="52dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:backgroundTint="#2196F3"
                            app:icon="@drawable/ic_phone"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:text="Đã khám"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/age"
                        style="@style/TextView.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="43 tuổi"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/Date"
            style="@style/TextView.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày khám"
            android:textSize="15sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <LinearLayout
                android:id="@+id/updatedDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>

        <TextView
            android:id="@+id/result"
            style="@style/TextView.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả khám"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/resultdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả khám bệnh" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



